# Do this to get the hv_kvp_daemon
# cd /usr/src/linux/
# make
# cd /usr/src/linux/tools/hv/
# make install

command="/usr/sbin/hv_kvp_daemon"
pidfile="/run/hv_kvp_daemon.pid"
name="hv_kvp_daemon"

depend() {
    need net
}

start_pre() {
    checkpath --directory --mode 0755 /run
}

start() {
    ebegin "Starting ${name}"
    start-stop-daemon --start --pidfile ${pidfile} --exec ${command}
    eend $?
}

stop() {
    ebegin "Stopping ${name}"
    start-stop-daemon --stop --pidfile ${pidfile}
    eend $?
}
